<div ng-app="wireworld" ng-controller="EditorController as editor">

  <!-- canvas -->
  <div id="canvas-wrapper">
    <div id="coords" style="left: 30px; top: 10px; position: absolute; visibility: hidden;"></div>
    <canvas id="c" style="background-color: black; margin" width="550" height="400"
    ></canvas>
  </div>

  <!-- menu -->
  <div style="position: absolute; bottom:0px;">
    <div class="panel panel-default">
      <div class="panel-body">
        View tools
        <div class="btn-group-lg" role="group" aria-label="...">
          <a role="button" class="btn btn-default btn-lg"
            id="step" ng-click="editor.evolve()">
            <span class="glyphicon glyphicon-step-forward"></span></a>
          <a role="button" class="btn btn-default btn-lg" id="play"
            ng-click="editor.play()" ng-class='{active: editor.playing}'>
          <span class="glyphicon glyphicon-play"></span></a>
          <a role="button" class="btn btn-default btn-lg" id="pause"
            ng-click="editor.pause()" ng-class='{active: !editor.playing}'><span class="glyphicon glyphicon-pause"></span></a>
          <label>
            <input type="range" value="50" id="speed-controller">
            Speed
          </label>
          <a role="button" class="btn btn-default btn-lg" ng-click="editor.zoomIn()" id="zoom_in"><span class="glyphicon glyphicon-zoom-in"></span></a>
          <a role="button" class="btn btn-default btn-lg" ng-click="editor.zoomOut()" id="zoom_out"><span class="glyphicon glyphicon-zoom-out"></span></a>
        </div>
      </div>
    </div>
  </div>

  <div style="position: absolute; right:0px; bottom:0px;">
    <div class="panel panel-default">
      <div class="panel-body">
        Editing tools
        <div class="btn-group-lg" role="group" aria-label="...">
          <a role="button" class="btn btn-default btn-lg" id="clear" ng-click="editor.clear();"><span class="glyphicon glyphicon-trash"></span></a>
          <a role="button"
            class="btn btn-default btn-lg"
            id="view"
            ng-click="editor.mode = 'view';"
            ng-class='{active: editor.mode=="view"}'
            ><span class="glyphicon glyphicon-move"></span></a>

          <a role="button" class="btn btn-default btn-lg"
            id="draw"
            ng-click="editor.mode = 'draw';"
            ng-class='{active: editor.mode=="draw"}'
          ><span class="glyphicon glyphicon-pencil"></span></a>
        </div>
      </div>
    </div>
  </div>

  <!-- title -->
  <div style="position: absolute;">
    <h1>Wireworld editor</h1>
  </div>

  <nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">Wireworld editor</a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
